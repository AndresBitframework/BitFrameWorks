<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<ProjectGuid>3fc7ec9d-cb72-4d57-9b72-c3a8182f72bd</ProjectGuid>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<Configurations>Debug;Release</Configurations>
		<GenerateAssemblyInfo>True</GenerateAssemblyInfo>
		<Authors>José Manuel Ojeda Melgar</Authors>
		<PackageTags>DevExpress XPO XAF Xamarin AspNetCore</PackageTags>
		<Company>BIT Frameworks</Company>
		<Description>Data store implementation</Description>
		<DebugType>Full</DebugType>
		<PackageProjectUrl>https://www.bitframeworks.com</PackageProjectUrl>
		<DebugSymbols>True</DebugSymbols>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
	</PropertyGroup>
	<ItemGroup>
		<None Include="LICENSE.txt" Pack="true" PackagePath="$(PackageLicenseFile)" />
	</ItemGroup>
	<!--Nuget Generation Section Start-->
	<PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Release|AnyCPU'">
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<AssemblyName>BIT.Xpo.Providers.WebApi.Server.v$(NugetVersion)</AssemblyName>
		<Version>$(NugetVersion)</Version>
		<PackageId>BIT.Xpo.Providers.WebApi.Server</PackageId>
	</PropertyGroup>
	<!--Nuget Generation Section End-->
	<!--Nuget Reference Section Start-->
	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
		<PackageReference Include="DevExpress.Xpo" Version="$(XpoVersion)" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\BIT.Data\BIT.Data.csproj" />
		<ProjectReference Include="..\BIT.Xpo.AspNetCore\BIT.AspNetCore.Xpo.csproj" />
	</ItemGroup>
	<!--NugetProject ReferencesSection End-->
	<!--Extra Start-->
	<!--Extra End-->
	<Target Name="CopyPackage" AfterTargets="Pack">
		<Copy SourceFiles="bin\$(ConfigurationName)\$(PackageId).$(PackageVersion).nupkg" DestinationFolder="$(USERPROFILE)\Documents\MyNugets\" />
	</Target>
</Project>