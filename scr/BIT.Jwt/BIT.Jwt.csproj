<Project Sdk="Microsoft.NET.Sdk">
  <!--<Import Project="BIT.Xpo.props"/>-->
  <PropertyGroup>
    <ProjectGuid>95b7077d-f7d9-427c-9f04-a079381d64fe</ProjectGuid>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Configurations>Debug;Release</Configurations>
    <GenerateAssemblyInfo>True</GenerateAssemblyInfo>
    <Authors>José Manuel Ojeda Melgar</Authors>
    <PackageTags>DevExpress XPO XAF</PackageTags>
    <Company>BIT Frameworks</Company>
    <Description>A JWT token implementation</Description>
    <DebugType>Full</DebugType>
    <PackageProjectUrl>https://www.bitframeworks.com</PackageProjectUrl>
    <DebugSymbols>True</DebugSymbols>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>
  <ItemGroup>
    <None Include="LICENSE.txt" Pack="true" PackagePath="$(PackageLicenseFile)" />
  </ItemGroup>
  <!--Nuget Generation Section Start-->
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Release|AnyCPU'">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyName>BIT.Jwt.v$(NugetVersion)</AssemblyName>
    <Version>$(NugetVersion)</Version>
    <PackageId>BIT.Jwt</PackageId>
  </PropertyGroup>
  <!--Nuget Generation Section End-->
  <!--Nuget Reference Section Start-->
  <ItemGroup>
    <ProjectReference Include="..\BIT.Data\BIT.Data.csproj" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="6.5.0" />
    <PackageReference Include="Microsoft.IdentityModel.JsonWebTokens" Version="6.5.0" />
  </ItemGroup>
  <!--NugetProject ReferencesSection End-->
  <!--Extra Start-->
  <!--Extra End-->
  <Target Name="CopyPackage" AfterTargets="Pack">
    <Copy SourceFiles="bin\$(ConfigurationName)\$(PackageId).$(PackageVersion).nupkg" DestinationFolder="$(USERPROFILE)\Documents\MyNugets\" />
  </Target>
</Project>